<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="end-game-layout" stylesheets="@styles/styles.css,@styles/game.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catquest.controllers.GameOverController">
    <HBox alignment="CENTER">
        <VBox alignment="CENTER" spacing="80">
            <Label text="Sorry, you lost!" styleClass="title-light" />
            <HBox alignment="CENTER" spacing="20">
                <Button styleClass="action-button" text="Quit" onAction="#handleQuitButtonAction" />
            </HBox>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="BOTTOM_RIGHT">
            <ImageView pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/main-img.png" />
            </ImageView>
        </HBox>
    </HBox>
</StackPane>
